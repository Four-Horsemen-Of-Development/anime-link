<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../../styles/main.css" />

</head>

<body>
    <main class="container text-center">
        <div class="padding">
            <a class="tabs" id="fave" href="#faveSec">favourites</a>
            <a class="tabs" id="watching" href="#watchingSec">watching</a>
            <a class="tabs" id="watched" href="#watchedSec">watched </a>
            <a class="tabs" id="following" href="#followingSec">following</a>
        </div>

        <!-- --- favourites --- -->
        <section class="favourites row" id="faveSec">
            <% for( let anime = 0; anime < animeList.length; anime++ ) { %>
            <% if (animeList[anime].is_favorite) { %>
            <div class="col">
                <form action="/details/<%= animeList[anime].mal_id %>">
    
                    <button type="submit">
                        <img id="random-img" src="<%= animeList[anime].image_url %>" alt="random.jpg" />
                    </button>
    
                    <h2><%= animeList[anime].title %></h2>
                </form>
                <form action="/updateUserList" method="POST">
                    <input type="hidden" name="broadcast" value="<%= animeList[anime].broadcast %>" />
                    <input type="hidden" name="title" value="<%= animeList[anime].title %>" />
                    <input type="hidden" name="image_url" value="<%= animeList[anime].image_url %>" />
                    <input type="hidden" name="mal_id" value="<%= animeList[anime].mal_id %>" />
                    <input type="hidden" name="user_id" value="<%= localStorage.getItem('userid')%>" />
                    <!--  -->
    
                    <input type="hidden" name="option" value="is_favorite" />
                    <button type="submit">delete</button>
                </form>
            </div>
            <% } %> <% } %>
        </section>
        <!-- xxx favourites xxx -->
        <!-- xxx watching xxx -->
        <section class="watching row" id="watchingSec">
            <% for( let anime = 0; anime < animeList.length; anime++ ) { %> <%
            if (animeList[anime].is_watching) { %>
            <div class="col">
                <form action="/details/<%= animeList[anime].mal_id %>">
                    <button type="submit">
                        <img id="random-img" src="<%= animeList[anime].image_url %>" alt="random.jpg" />
                    </button>
                    <h2><%= animeList[anime].title %></h2>
                </form>
                <form action="/updateUserList" method="POST">
                    <input type="hidden" name="broadcast" value="<%= animeList[anime].broadcast %>" />
                    <input type="hidden" name="title" value="<%= animeList[anime].title %>" />
                    <input type="hidden" name="image_url" value="<%= animeList[anime].image_url %>" />
                    <input type="hidden" name="mal_id" value="<%= animeList[anime].mal_id %>" />
                    <input type="hidden" name="user_id" value="<%= localStorage.getItem("userid")%>" />
                    <!--  -->
    
                    <input type="hidden" name="option" value="is_watching" />
                    <button type="submit">delete</button>
                </form>
            </div>
            <% } %> <% } %>
        </section>

        <!-- xxx watching xxx -->
        <!-- --- watched --- -->
        <section class="watched row" id="watchedSec">
            <% for( let anime = 0; anime < animeList.length; anime++ ) { %>
            <% if (animeList[anime].is_watched) { %>
            <div class="col">
                <form action="/details/<%= animeList[anime].mal_id %>">
                    <button type="submit">
                        <img id="random-img" src="<%= animeList[anime].image_url %>" alt="random.jpg" />
                    </button>
                    <h2><%= animeList[anime].title %></h2>
                </form>
                <form action="/updateUserList" method="POST">
                    <input type="hidden" name="broadcast" value="<%= animeList[anime].broadcast %>" />
                    <input type="hidden" name="title" value="<%= animeList[anime].title %>" />
                    <input type="hidden" name="image_url" value="<%= animeList[anime].image_url %>" />
                    <input type="hidden" name="mal_id" value="<%= animeList[anime].mal_id %>" />
                    <input type="hidden" name="user_id" value="<%= localStorage.getItem("userid")%>" />
                    <!--  -->
    
                    <input type="hidden" name="option" value="is_watched" />
                    <button type="submit">delete</button>
                </form>
            </div>
            <% } %> <% } %>
        </section>
        <!-- xxx watched xxx -->
        <!-- --- following --- -->
        <section class="following col" id="followingSec">
            <% for( let anime = 0; anime < animeList.length; anime++ ) { %>
            <% if (animeList[anime].following) { %>
            <form action="/details/<%= animeList[anime].mal_id %>">
                <button type="submit">
                    <img id="random-img" src="<%= animeList[anime].image_url %>" alt="random.jpg" />
                </button>
                <h2><%= animeList[anime].title %></h2>
            </form>
            <form action="/updateUserList" method="POST">
                <input type="hidden" name="broadcast" value="<%= animeList[anime].broadcast %>" />
                <input type="hidden" name="title" value="<%= animeList[anime].title %>" />
                <input type="hidden" name="image_url" value="<%= animeList[anime].image_url %>" />
                <input type="hidden" name="mal_id" value="<%= animeList[anime].mal_id %>" />
                <input type="hidden" name="user_id" value="<%= localStorage.getItem("userid")%>" />
                <!--  -->
                <input type="hidden" name="option" value="following" />
                <button type="submit">delete</button>
            </form>
            <% } %> <% } %>
        </section>
        <!-- xxx following xxx -->
    </main>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="./js/userPanel.js"></script>
</body>

</html>